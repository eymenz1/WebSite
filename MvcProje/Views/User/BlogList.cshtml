@model IEnumerable<entitylayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
@{string color = "";}
@{string casename = "";}
@{ int puan = 1;}



<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog List</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Name

                            </th>



                            <th style="width: 20%">

                                Blog Rating

                            </th>

                            <th style="width: 8%" class="text-center">

                                Status

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            puan = item.BlogRating * 10;
                            if (puan >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                casename = "Perfect";
                            }
                            if (puan >= 70 && puan <= 84)
                            {
                                color = "post-category text-white bg-info mb-3";
                                casename = "Very Good";
                            }
                            if (puan >= 50 && puan <= 69)
                            {
                                color = "post-category text-white bg-info mb-3";
                                casename = "Good";
                            }
                            if (puan >= 0 && puan <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                casename = "Bad";
                            }


                            <tr>

                                <td>

                                    @item.BlogId

                                </td>

                                <td>
                                    @item.BlogTitle

                                </td>
                                



                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="10" aria-volumemin="0" aria-volumemax="10" style="width:@puan%">

                                        </div>

                                    </div>

                                    <small>

                                        Rating=  @item.BlogRating

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="badge @color">@casename</span>

                                </td>

                                <td class="project-actions text-right">



                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Edit

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Delete

                                    </a>

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <a href="/User/AddNewBlog/" class="btn btn-primary">Add New Blog</a>


</body>

</html>