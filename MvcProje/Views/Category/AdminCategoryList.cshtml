@model IEnumerable<entitylayer.Concrete.Category>
@{

    ViewBag.Title = "AdminCategoryList";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@{string color = "";}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Category List</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Category Name

                            </th>

                            @*<th style="width: 30%">

                                Last Blog

                            </th>*@

                          

                            <th style="width: 5%" class="text-right">

                                Status

                            </th>

                            <th style="width: 40%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.CategoryStatus == true)
                            {
                                color = "badge badge-success";
                            }
                            if (item.CategoryStatus == false)
                            {
                                color = "badge badge-warning";
                            }

                            <tr>

                                <td>

                                    @item.CategoryID

                                </td>

                                <td>
                                    @item.CategoryName

                                </td>

                                <td>

                                    @*<ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar.png">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar2.png">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar3.png">

                                        </li>

                                    </ul>*@

                                </td>

                                

                                <td class="project-state">
                                    <style>
                                        .sol-yaslama {
                                            text-align: left;
                                        }
                                    </style>

                                    <p class="sol-yaslama"> <span class="@color">@item.CategoryStatus</span></p>

                                    

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogByCategory/@item.CategoryID">

                                        <i class="fas fa-folder">

                                        </i>

                                        Category's Blogs

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Category/CategoryEdit/@item.CategoryID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Edit

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Category/CategoryDelete/@item.CategoryID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Delete

                                    </a>
                                    <a class="btn btn-outline-secondary btn-sm" href="/Category/CategoryStatusTrue/@item.CategoryID">

                                        <i class="fas fa-atom">

                                        </i>

                                        Do Active

                                    </a>

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>


            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
        Add New Category
    </button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Add new Category</h2>
                </div>
                <form method="post" action="/Category/AdminCategoryAdd/">
                    <div class="modal-body">
                        <label>Category Name</label>
                        <input type="text" name="CategoryName" class="form-control" />
                        <br />
                        <label>Category Info</label>
                        <input type="text" name="CategoryDescription" class="form-control" />
                        <br />
                        <button class="btn btn-primary">Save</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

</body>

</html>