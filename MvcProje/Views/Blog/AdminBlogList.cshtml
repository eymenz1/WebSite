@model IEnumerable<entitylayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog List</h2>
<br/>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Category</th>
        <th>DateTime</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
        <th>Comments</th>

    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.BlogId</td>
                    <td>@item.BlogTitle</td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.BlogDate.ToShortDateString()</td>
                    <td><a href="/Blog/DeleteBlog/@item.BlogId" class="btn btn-danger">Delete</a></td>
                    <td><a href="/Blog/UpdateBlog/@item.BlogId" class="btn btn-success">Update</a></td>
                    <td><a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-warning">Details</a></td>
                    <td><a href="/Blog/GetCommentByBlog/@item.BlogId" class="btn btn-dark">Comment</a></td>
                    
                </tr>
            }
    </table>
<a href="/Blog/AddNewBlog/" class="btn btn-primary">Add new blog</a>

