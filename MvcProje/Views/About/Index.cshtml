@model IEnumerable<entitylayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">About Us</h1>
                    <p class="lead mb-4 text-white">Biurası bizim hakkımızda bilgiler içerir.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 order-md-2">
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 mr-auto order-md-1">
                    <h2>Biz kimiz</h2>

                    <p>@item.AboutContent1</p>
                    
                    <ul class="ul-check list-unstyled success">
                        <li>Her gün 2 yeni blog yazısı</li>
                        <li>4 farklı kategori</li>
                        <li>Bilgisayar Mühendisliği OKuyan yazarlar</li>
                    </ul>
                </div>
            }
            </div>
    </div>
</div>
@Html.Action("MeetTheTeam", "About")
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <img src="@item.AboutImage2" alt="Image" class="img-fluid">
                </div>

                <div class="col-md-5 ml-auto">
                    <h2>Bu blogda ne yapıyoruz</h2>

                    <p class="mb-4">@item.AboutContent2 </p>
                    
                    <ul class="ul-check list-unstyled success">
                        <li>Yurtdışı ve içi geziler</li>
                        <li>YUrtiçi ve dışı yemekler</li>
                        <li>Gezme ile ilgili her şey</li>
                    </ul>
                </div>
            }
            </div>
        </div>
    </div>
